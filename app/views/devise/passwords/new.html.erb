

<div id='content' class='p-4 p-md-5 pt-5' style='background: #fcfcfc'>

  <section class="container h-100">

    <h2>Forgot your password?</h2>
    <hr />


      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'my-5 bg-light') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3">
          <%= f.label :email, class: "control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Send reset password instructions", class: "btn btn-success w-100 mb-2"  %>
        </div>
        <%= render "devise/shared/links" %>

      <% end %>

  </section>

</div>
