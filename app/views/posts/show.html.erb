<div id='content' class='p-4 p-md-5 pt-5'>
    <div class="d-flex">
      <h4 class="d-none d-sm-inline mr-auto"><span class='fa fa-home'></span> Post</h4>
      <h5 class="d-inline d-sm-none mr-auto"><span class='fa fa-home'></span> Post</h5>

    </div>
    <hr />
    
    <section class="container">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="my-3 col-md-9">

          <p>
            <strong>Title:</strong>
            <%= @post.title %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @post.description %>
          </p>

          <p>
            <strong>Story image:</strong>
            <%= @post.story_image %>
          </p>

          <p>
            <strong>Detail media:</strong>
            <%= @post.detail_media %>
          </p>

          <p>
            <strong>Details media type:</strong>
            <% if @post.image_detail_media %>
              Picture
            <% else %>
              Video
            <% end %>
          </p>

          <p>
            <strong>Source:</strong>
            <%= @post.source %>
          </p>

          <p>
            <strong>Posted by:</strong>
            <%= @post.user.email %>
          </p>

          <p>
            <strong>Category:</strong>
            <%= @post.category.name %>
          </p>

          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Back', posts_path %>
          
        </div>
      </div>
    </section>

</div>