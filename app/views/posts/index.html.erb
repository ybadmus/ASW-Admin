<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Story image</th>
      <th>Detail media</th>
      <th>Source</th>
      <th>Posted by</th>
      <th>Category</th>
      <th>Image detail media</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.story_image %></td>
        <td><%= post.detail_media %></td>
        <td><%= post.source %></td>
        <td><%= post.posted_by %></td>
        <td><%= post.category_id %></td>
        <td><%= post.image_detail_media %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
