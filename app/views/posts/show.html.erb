<div id='content' class='p-4 p-md-5 pt-5'>
    <div class="d-flex">
      <h4 class="d-none d-sm-inline mr-auto"><span class='fa fa-home'></span> Post</h4>
      <h5 class="d-inline d-sm-none mr-auto"><span class='fa fa-home'></span> Post</h5>

    </div>
    <hr />
    
    <section class="container">
      <div class="my-3">

        <p>
          <strong>Title:</strong>
          <%= @post.title %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @post.description %>
        </p>

        <p>
          <strong>Story image:</strong>
          <%= @post.story_image %>
        </p>

        <p>
          <strong>Detail media:</strong>
          <%= @post.detail_media %>
        </p>

        <p>
          <strong>Source:</strong>
          <%= @post.source %>
        </p>

        <p>
          <strong>Posted by:</strong>
          <%= @post.user.email %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @post.category_id %>
        </p>

        <p>
          <strong>Image detail media:</strong>
          <%= @post.image_detail_media %>
        </p>

        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
        
      </div>
    </section>

</div>