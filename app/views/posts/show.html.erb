<section class="container mt-3">
  <div class="row py-5 border post-show">
    <div class="col-12 col-lg-3 mb-3">
      <img src="<%= @post.story_image %>" class="image-detail-view">
    </div>

    <div class="col-12 col-lg-9 text-dark">

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @post.description %>
      </p>

      <p>
        Author:
        <strong><%= @post.user.username %></strong>
      </p>

      <%= link_to category_path(@post.category.id) do %>
        <button type="button" class="btn btn-sm btn-default border"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back</button>
      <% end %>

      <%= link_to edit_post_path(@post) do %> 
        <button type="button" class="btn btn-sm btn-secondary"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</button>
      <% end %>
      
    </div>
  </div>
</section>
