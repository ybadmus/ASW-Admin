<!DOCTYPE html>
<html>
  <head>
    <title>ASW Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900' %>
    <%= stylesheet_link_tag 'https://use.fontawesome.com/7089435224.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper d-flex align-items-stretch">

    <% if user_signed_in? %>
      <nav id='sidebar'>
        <h1><a href='/' class='logo'>ASW Admin</a></h1>
        <ul class='list-unstyled components mb-5'>
          <li class='active'>
            <a href='/'><span class='fa fa-home mr-3'></span>Home</a>
          </li>

          <% loadMenus.each do |menu| %>
            <li>
                <%= link_to category_path(menu.id) do %>
                  <span class='<%= menu.icon %> mr-3'></span><%= menu.name %>
                <% end %>
            </li>
          <% end %>

          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class='fa fa-sign-out mr-3'></span>Logout
            <% end %>
          </li>
        </ul>
      </nav>
    <% end %>

      <%= yield %>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">

            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete Confirmation</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
              </button>
            </div>

            <div class="modal-body">
              Are you sure?
            </div>
            
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
              <%= link_to 'Delete', method: :delete, class: 'btn btn-outline-danger' %>
            </div>
          </div>
        </div>
    </div>

  </body>
</html>