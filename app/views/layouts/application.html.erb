<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900' %>
    <%= stylesheet_link_tag 'https://use.fontawesome.com/7089435224.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper d-flex align-items-stretch">
      <nav id='sidebar'>
        <h1><a href='/' class='logo'>ASW Admin</a></h1>
        <ul class='list-unstyled components mb-5'>
          <li class='active'>
            <a href='/'><span class='fa fa-home mr-3'></span> Home</a>
          </li>
          <li>
              <a href='#'><span class='fa fa-star mr-3'></span> Top News</a>
          </li>
          <li>
            <a href='#'><span class='fa fa-fire mr-3'></span> Latest News</a>
          </li>
          <li>
            <a href='#'><span class='fa fa-music mr-3'></span> Entertainment</a>
          </li>
          <li>
            <a href='#'><span class='fa fa-futbol-o mr-3'></span> Sports</a>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span class='fa fa-sign-out mr-3'></span> Logout
            <% end %>
          </li>
        </ul>
      </nav>

      <%= yield %>
    </div>
  </body>
</html>