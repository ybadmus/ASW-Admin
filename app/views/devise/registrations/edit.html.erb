

  <section class="container h-100">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'my-5 bg-light') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

       <div class="field mb-3">
        <%= f.label :username, class: "control-label" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-3">
        <%= f.label :password, class: "control-label" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: "control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password, class: "control-label" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-success w-100 mb-2" %>
      </div>

      <br />

      <h4>Cancel my account</h4>

      <p>Are you unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

    <% end %>

  </section>
